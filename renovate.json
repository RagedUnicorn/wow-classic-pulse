{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "on monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 2,
  "prCreation": "immediate",
  "automerge": false,
  "packageRules": [
    {
      "matchManagers": [
        "maven"
      ],
      "groupName": "ragedunicorn maven plugins",
      "description": "Group all ragedunicorn Maven plugin updates",
      "matchPackageNames": [
        "/^com.ragedunicorn.tools.maven/"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions",
      "description": "Group all GitHub Actions updates"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr",
      "description": "Automerge dev dependencies"
    }
  ],
  "maven": {
    "managerFilePatterns": [
      "/^pom\\.xml$/"
    ]
  },
  "github-actions": {
    "managerFilePatterns": [
      "/^\\.github/workflows/.*\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^pom\\.xml$/"
      ],
      "matchStrings": [
        "<addon\\.interface>(?<currentValue>\\d+)</addon\\.interface>"
      ],
      "depNameTemplate": "WoW Interface Version",
      "datasourceTemplate": "custom",
      "versioningTemplate": "loose",
      "description": "Track WoW interface version"
    }
  ],
  "ignoreDeps": [
    "WoW Interface Version"
  ],
  "prBodyDefinitions": {
    "Package": "{{depName}}",
    "Type": "{{depType}}",
    "Change": "{{updateType}}",
    "Current": "{{currentVersion}}",
    "New": "{{newVersion}}",
    "Age": "{{age}}",
    "Adoption": "{{adoption}}",
    "Passing": "{{passing}}",
    "Confidence": "{{confidence}}"
  },
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
